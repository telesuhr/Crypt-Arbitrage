# Database Configuration (PostgreSQL only, no SQLite)
# ローカル接続
DATABASE_URL=postgresql://postgres:password@localhost:5432/crypto_arbitrage

# TailScale経由での接続例
# DATABASE_URL=postgresql://postgres:password@your-tailscale-hostname:5432/crypto_arbitrage

# 読み取り専用接続（監視端末用）
# DATABASE_URL_READONLY=postgresql://readonly_monitor:password@your-tailscale-hostname:5432/crypto_arbitrage

# Exchange API Keys (DO NOT COMMIT REAL KEYS)
# bitFlyer
BITFLYER_API_KEY=your_bitflyer_api_key
BITFLYER_API_SECRET=your_bitflyer_api_secret

# bitbank
BITBANK_API_KEY=your_bitbank_api_key
BITBANK_API_SECRET=your_bitbank_api_secret

# Coincheck
COINCHECK_API_KEY=your_coincheck_api_key
COINCHECK_API_SECRET=your_coincheck_api_secret

# GMO Coin
GMO_API_KEY=your_gmo_api_key
GMO_API_SECRET=your_gmo_api_secret

# Binance (optional)
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# Application Settings
LOG_LEVEL=INFO
ENVIRONMENT=development
TIMEZONE=Asia/Tokyo
SQL_ECHO=false  # Set to true for SQL debugging

# Trading Parameters
MIN_PROFIT_THRESHOLD=0.003
MAX_POSITION_SIZE_BTC=0.1
MAX_POSITION_SIZE_ETH=1.0

# Notification Settings
# Discord Webhook (推奨)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# LINE Notify (2025年3月31日終了予定)
# LINE_NOTIFY_TOKEN=your_line_notify_token

# Email/Slack (optional)
ALERT_EMAIL=your_email@example.com
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL